<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textRowTipoSigno"
        android:text="Signo: "
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:backgroundTint="@color/black"
        android:textColor="@color/cyan_salud_daker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textRowMayorMed"
        android:text="Mayor medición:"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textRowMenorMed"
        android:text="Menor medición:"
        android:textColor="#000"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/textRowPromedioMed"
        android:text="Promedio:"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>